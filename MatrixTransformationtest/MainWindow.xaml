<Window x:Class="MatrixTransformationtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatrixTransformationtest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_CTM" Content="Move" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Click="btn_CTM_Click"/>
        <Canvas x:Name="mcanvas" Width="500" Height="500" Grid.Row="1"/>
    </Grid>
</Window>
